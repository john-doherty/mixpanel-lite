    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine Current File",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine",
            "args": [
                "${file}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine all",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine",
            "args": [
                "tests/*spec.js"
            ]
        }
    ]
}
